pipeline {
    agent {
        docker {
            image 'python:3.9'
        }
    }

    stages {
        stage('Clone repo') {
            steps {
                git url: "https://github.ncsu.edu/zwhelton/python-demo-jenkins"
                echo 'Cloned repo'
            }
        }

        stage('Lint') {
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip install -r requirements.txt --user'
                    sh 'python -m pylint $(git ls-files "*.py") --exit-zero'
                }
            }
        }

        stage('Test') {
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python -m pytest tests'
                }
            }
        }

        stage('Build image') {
            steps {
                sh 'docker build -t demo-app:$BUILD_NUMBER .'
                echo 'Built image'
            }
        }

        stage('Push image') {
            steps {
                sh 'docker tag demo-app host.docker.internal/demo-app'
                sh 'docker push host.docker.internal/demo-app'
            }
        }
    }
}

